<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/launcher_drawer_layout"
    style="@style/MenuDrawerLayout">

    <FrameLayout style="@style/LauncherRoot">

        <ProgressBar
            style="@style/LauncherLoading"
            android:id="@+id/launcher_loading"/>

        <LinearLayout
            style="@style/LauncherRootContent"
            android:id="@+id/launcher_content">

            <include layout="@layout/search_view_panel"/>

            <FrameLayout
                style="@style/LauncherWorkSpacesContent"
                android:id="@+id/launcher_work_spaces_content"/>

            <LinearLayout
                style="@style/LauncherPaginationPanel"
                android:id="@+id/launcher_pagination_panel"/>

            <include layout="@layout/app_drawer_panel"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fab_menu_content"
            style="@style/LauncherFabMenuContent">

            <LinearLayout
                android:id="@+id/fab_menu"
                style="@style/FabMenu">

                <android.support.design.widget.FloatingActionButton
                    style="@style/LauncherFabButton"
                    android:id="@+id/fab_button"/>

            </LinearLayout>

        </FrameLayout>

        <include layout="@layout/app_drawer_layout"/>

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/launcher_navigation_view"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/app_menu"
        style="@style/MenuNavigationView"/>

</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeBase" parent="AppThemeCommons" />

    <style name="AppTheme" parent="AppThemeBase" />

    <style name="AppThemeWizardBase" parent="AppThemeCommons"/>

    <style name="AppThemeWizard" parent="AppThemeBase"/>

    <style name="AppThemeWallpaperBase" parent="AppThemeCommons">
        <!-- Show Wallpaper -->

        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

    </style>

    <style name="AppThemeWallpaper" parent="AppThemeWallpaperBase"/>

    <style name="AppThemeCommons" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
    </style>

    <style name="AppThemeToolbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
    </style>

</resources>
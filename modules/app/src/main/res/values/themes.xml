<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="AppTheme.Commons" />

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppThemeWizard.Base" parent="AppTheme.Commons"/>

    <style name="AppThemeWizard" parent="AppTheme.Base"/>

    <style name="AppThemeWallpaper.Base" parent="AppTheme.Commons">
        <!-- Show Wallpaper -->

        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

    </style>

    <style name="AppThemeWallpaper" parent="AppThemeWallpaper.Base"/>

    <style name="AppTheme.Commons" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base -->

    <style name="BaseActionsRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_actions</item>
    </style>

    <style name="BaseActionsTransitionView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BaseActionsLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BaseActionsContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BaseActionsToolbarParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="BaseActionsToolbar" parent="BaseActionsToolbarParent" />

    <style name="BaseActionsRootContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BaseActionsFabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_fab_button</item>
        <item name="android:layout_marginRight">@dimen/margin_fab_button</item>
        <item name="android:layout_gravity">right</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/elevation_fab_button</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_button_pressed</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BaseActionsErrorContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseActionsErrorMessage">
        <item name="android:layout_width">@dimen/width_error_dialog_message</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/error_dialog_text</item>
    </style>

    <style name="BaseActionsErrorIcon">
        <item name="android:layout_width">@dimen/size_icon_error</item>
        <item name="android:layout_height">@dimen/size_icon_error</item>
        <item name="android:layout_marginTop">@dimen/margin_top_error_dialog_image</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_error_dialog_image</item>
        <item name="android:src">@drawable/placeholder_error</item>
    </style>

    <style name="BaseActionsErrorButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/error_dialog_min_width_button</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:text">@string/buttonErrorReload</item>
        <item name="android:textColor">@color/error_dialog_text_button</item>
    </style>

    <!-- Content -->

    <style name="ActionsListContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ActionsRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ActionsFastScroll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="ActionsViewTransition">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Fragment Content -->

    <style name="ActionsFragmentContentParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="ActionsFragmentContent" parent="ActionsFragmentContentParent" />

</resources>
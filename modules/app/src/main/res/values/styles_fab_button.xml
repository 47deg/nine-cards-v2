<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FabMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrapThe animation for appear and disappear have to be faster
            - The text into the Fab button have to be bold_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:gravity">end</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FabMenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FabMenuItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_title_fab_menu_item</item>
        <item name="android:textColor">@color/collection_fab_button_item_title</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="FabMenuItemIcon">
        <item name="android:layout_width">@dimen/size_fab_menu_item</item>
        <item name="android:layout_height">@dimen/size_fab_menu_item</item>
        <item name="android:layout_marginLeft">@dimen/margin_horizontal_fab_button_item</item>
        <item name="android:layout_marginRight">@dimen/margin_horizontal_fab_button_item</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_fab_button_item</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_fab_button_item</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LauncherRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LauncherRootContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="LauncherTopBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LauncherCollectionActionsPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_search_box</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherRemoveAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:text">@string/remove</item>
        <item name="android:textColor">@color/text_launcher_action</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="LauncherSearchPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_search_box</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/padding_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="LauncherSearchHeader">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="LauncherSearchHeaderLine">
        <item name="android:layout_width">@dimen/divider_default</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color_search_box</item>
    </style>

    <style name="LauncherSearchEditText">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/drawer_search_box</item>
        <item name="android:textColorHint">@color/drawer_search_box_hint</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginLeft">@dimen/padding_default</item>
    </style>

    <style name="LauncherSearchIcon">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="LauncherAnimatedDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherWorkSpaces">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LauncherBurgerButton">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/search_bar_icon_light</item>
    </style>

    <style name="LauncherGoogleButton">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/search_bar_logo_google_light</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
    </style>

    <style name="LauncherMicButton">
        <item name="android:layout_width">@dimen/height_search_box</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/icon_mic_search</item>
    </style>

    <style name="LauncherDrawerPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingLeft">@dimen/padding_default</item>
        <item name="android:paddingRight">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="LauncherDrawerRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LauncherDrawerContentItem">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LauncherDrawerItem">
        <item name="android:layout_width">@dimen/size_icon_app_drawer</item>
        <item name="android:layout_height">@dimen/size_icon_app_drawer</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LauncherDrawerAppsItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/icon_app_drawer</item>
    </style>

    <style name="LauncherPaginationPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- FAB Menu -->

    <style name="LauncherFabMenuContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/margin_bottom_fab_menu_content_collections</item>
        <item name="android:cropToPadding">false</item>
    </style>

    <style name="LauncherFabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_fab_button</item>
        <item name="android:layout_gravity">end</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/elevation_fab_button</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_button_pressed</item>
    </style>

    <!-- Collection Menu -->

    <style name="LauncherCollectionMenuRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="LauncherCollectionMenuContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardIconContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CardIcon">
        <item name="android:layout_width">@dimen/size_icon_card</item>
        <item name="android:layout_height">@dimen/size_icon_card</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CardText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CollectionsRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CollectionsToolbarParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_toolbar_collection_details</item>
    </style>

    <style name="CollectionsToolbar" parent="CollectionsToolbarParent" />

    <style name="CollectionsIconContentParent">
        <item name="android:layout_width">@dimen/size_icon_collection_detail</item>
        <item name="android:layout_height">@dimen/size_icon_collection_detail</item>
        <item name="android:background">@drawable/background_icon_collection_detail</item>
        <item name="android:layout_marginTop">@dimen/padding_default</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:pivotX">@dimen/pivot_x_icon_collection_detail</item>
        <item name="android:pivotY">0</item>
    </style>

    <style name="CollectionsIconContent" parent="CollectionsIconContentParent" />

    <style name="CollectionsIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CollectionsPagerParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_top_pagers_collection_details</item>
    </style>

    <style name="CollectionsPager" parent="CollectionsPagerParent" />

    <style name="CollectionsTabsParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_tabs_collection_details</item>
        <item name="android:layout_marginTop">@dimen/margin_top_tabs_collection_details</item>
    </style>

    <style name="CollectionsTabs" parent="CollectionsTabsParent" />

    <style name="CollectionsTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_tabs</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- FAB Menu -->

    <style name="CollectionsFabMenuContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:elevation">@dimen/elevation_fab_button</item>
    </style>

    <style name="CollectionsFabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_fab_button</item>
        <item name="android:layout_gravity">end</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/elevation_fab_button</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_button_pressed</item>
        <item name="backgroundTint">@color/collection_detail_fab_button_item</item>
        <item name="rippleColor">@color/collection_detail_fab_button_item_ripple</item>
    </style>

    <!-- Fragment Content -->

    <style name="CollectionsFragmentContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">@dimen/elevation_fab_button</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LauncherDrawerContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/drawer_content</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="LauncherDrawerLayoutContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LauncherDrawerToolbarParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_toolbar_app_drawer</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/drawer_toolbar</item>
    </style>

    <style name="LauncherDrawerToolbar" parent="LauncherDrawerToolbarParent"/>

    <style name="LauncherDrawerTab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxWidth">@dimen/size_app_drawer_tab</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LauncherDrawerTabTextLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="LauncherDrawerTabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/drawer_tab_color_default</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
    </style>

    <style name="LauncherDrawerTabArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:src">@drawable/app_drawer_arrow</item>
    </style>

    <style name="LauncherDrawerTabBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_app_drawer_tab_bottom</item>
        <item name="android:background">@color/drawer_tab_bottom</item>
    </style>

    <style name="LauncherDrawerInnerContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherDrawerRecycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LauncherDrawerLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LauncherDrawerFabButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_app_drawer_fab_button</item>
        <item name="android:layout_marginLeft">@dimen/margin_app_drawer_fab_button</item>
        <item name="android:layout_marginRight">@dimen/margin_app_drawer_fab_button</item>
        <item name="android:layout_marginTop">@dimen/margin_top_app_drawer_fab_button</item>
        <item name="android:src">@drawable/app_drawer_icon_google_play</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">@dimen/elevation_fab_button</item>
        <item name="pressedTranslationZ">@dimen/elevation_fab_button_pressed</item>
        <item name="backgroundTint">@color/drawer_fab_button</item>
        <item name="rippleColor">@color/drawer_fab_button_ripple</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WizardRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Loading -->

    <style name="WizardLoadingContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WizardLoadingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WizardLoadingMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <!-- User -->

    <style name="WizardUserContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WizardUserLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/wizard_logo</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_marginTop">@dimen/wizard_margin_top_logo</item>
    </style>

    <style name="WizardUserTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_xxxlarge</item>
        <item name="android:text">@string/welcome</item>
        <item name="android:textColor">@color/wizard_text_title</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WizardUserSelectContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WizardUserButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/wizard_min_width_button</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:text">@string/buttonLetStart</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/wizard_text_button_on</item>
    </style>

    <style name="WizardUserTerms">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:text">@string/termsAndConditions</item>
        <item name="android:textColor">@color/wizard_text_terms</item>
        <item name="android:checked">true</item>
    </style>

    <!-- Devices -->

    <style name="WizardDeviceContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WizardDeviceTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_xxxlarge</item>
        <item name="android:text">@string/welcome</item>
        <item name="android:textColor">@color/wizard_text_title</item>
    </style>

    <style name="WizardDeviceMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:text">@string/addDeviceMessage</item>
        <item name="android:textColor">@color/wizard_text_message</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WizardDeviceRadioGroupScroll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="WizardDeviceRadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">@color/wizard_text_title</item>
        <item name="android:textSize">@dimen/text_default</item>
    </style>

    <style name="WizardDeviceButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/wizard_min_width_button</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:text">@string/buttonContinue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/wizard_text_button_on</item>
        <item name="android:layout_marginBottom">@dimen/padding_large</item>
    </style>

    <!-- Steps: Loading previous configuration -->

    <style name="WizardStepsRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WizardStepsContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="WizardStepsWorkspace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WizardStepsButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/wizard_min_width_button</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:text">@string/goTo9Cards</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/wizard_text_button</item>
        <item name="android:layout_marginBottom">@dimen/padding_large</item>
    </style>

    <style name="WizardStepsPaginationPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Step Item -->

    <style name="WizardStepItemRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="WizardStepItemImageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/wizard_height_image_content</item>
    </style>

    <style name="WizardStepItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WizardStepItemMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/wizard_max_width_step_message</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/wizard_text_step_item_message</item>
        <item name="android:lines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- New configuration -->

    <style name="WizardNewConfigurationRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WizardNewConfigurationStepContentRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0px</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WizardNewConfigurationStepContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WizardNewConfigurationHeaderContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/wizard_height_header_steps</item>
    </style>

    <style name="WizardNewConfigurationHeaderImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WizardNewConfigurationTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xxxxlarge</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/padding_xxlarge</item>
    </style>

    <style name="WizardNewConfigurationDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/padding_xxlarge</item>
        <item name="android:paddingRight">@dimen/padding_xxlarge</item>
    </style>

    <style name="WizardNewConfigurationPaginationContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_xlarge</item>
    </style>

    <style name="WizardNewConfigurationPagers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WizardNewConfigurationNext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:text">@string/next</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <!-- Step 0 -->

    <style name="WizardNewConfigurationHeaderContentStep0" parent="WizardNewConfigurationHeaderContent">
        <item name="android:background">@color/wizard_background_new_conf_step_0</item>
    </style>

    <style name="WizardNewConfigurationHeaderImageStep0" parent="WizardNewConfigurationHeaderImage">
        <item name="android:src">@drawable/placeholder_step_0</item>
    </style>

    <style name="WizardNewConfigurationTitleStep0" parent="WizardNewConfigurationTitle">
        <item name="android:text">@string/wizard_new_conf_title_step_0</item>
        <item name="android:textColor">@color/wizard_background_new_conf_step_0</item>
    </style>

    <style name="WizardNewConfigurationDescriptionStep0" parent="WizardNewConfigurationDescription">
        <item name="android:text">@string/wizard_new_conf_desc_step_0</item>
    </style>

</resources>
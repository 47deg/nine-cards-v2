<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuDrawerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MenuNavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/background_menu</item>
    </style>

    <style name="MenuHeaderRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:background">@color/background_menu_header</item>
    </style>

    <style name="MenuHeaderContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="MenuHeaderAvatar">
        <item name="android:layout_width">@dimen/menu_size_avatar</item>
        <item name="android:layout_height">@dimen/menu_size_avatar</item>
    </style>

    <style name="MenuHeaderName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/text_menu_name</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
    </style>

</resources>
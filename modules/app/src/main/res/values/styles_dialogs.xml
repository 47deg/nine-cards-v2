<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dialog Contact Info Phone -->

    <style name="DialogContactInfoContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:weightSum">5</item>
    </style>

    <style name="DialogContactInfoLeftLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DialogContactInfoRightLayoutLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">4</item>
    </style>

    <style name="DialogContactInfoRightLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">4</item>
    </style>

    <style name="DialogContactInfoLeftIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/dialog_contact_icon_phone</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="DialogContactInfoPhoneContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="DialogContactInfoPhoneNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DialogContactInfoPhoneCategory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_phone_category</item>
    </style>

    <style name="DialogContactInfoRightIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/dialog_contact_icon_sms</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Dialog Contact Info -->

    <style name="DialogContactInfoLineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_default</item>
        <item name="android:background">@color/divider_color_info_dialog</item>
    </style>

    <style name="DialogContactInfoLineHorizontalNoAlpha">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_default</item>
        <item name="android:background">@color/divider_color_info_dialog_no_alpha</item>
    </style>

    <style name="DialogContactInfoRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DialogContactInfoTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="DialogContactInfoItemContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DialogContactInfoImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <style name="DialogContactInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>

    <!-- Dialog Icon Info -->

    <style name="DialogIconInfoRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

    <style name="DialogIconInfoName">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DialogIconInfoSelect">
        <item name="android:layout_width">@dimen/size_icon_select_new_collection</item>
        <item name="android:layout_height">@dimen/size_icon_select_new_collection</item>
    </style>

    <!-- Dialog Color Info -->

    <style name="DialogColorInfoRoot">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DialogColorInfoImage">
        <item name="android:layout_width">@dimen/size_icon_color_dialog</item>
        <item name="android:layout_height">@dimen/size_icon_color_dialog</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- ListPopupMenu -->

    <style name="ListPopupMenuText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/item_list_popup_menu</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="@integer/duration_animation_collection_detail">
    <changeBounds>
        <arcMotion
            android:minimumHorizontalAngle="15"
            android:minimumVerticalAngle="0"
            android:maximumAngle="90"/>
    </changeBounds>
    <changeTransform/>
    <changeImageTransform/>
    <transitionSet android:transitionOrdering="sequential">
        <transition
            class="com.fortysevendeg.ninecardslauncher.app.ui.collections.RevealTransition"
            android:transitionVisibilityMode="mode_out"/>
        <transition
            class="com.fortysevendeg.ninecardslauncher.app.ui.collections.RevealTransition"
            android:transitionVisibilityMode="mode_in"/>
        <targets>
            <target android:targetId="@id/collections_toolbar"/>
            <target android:targetName="snapshot"/>
        </targets>
    </transitionSet>
</transitionSet>
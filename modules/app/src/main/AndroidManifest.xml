<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.fortysevendeg.ninecardslauncher2"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="22"/>

    <application
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:name="com.fortysevendeg.ninecardslauncher.NineCardsApplication">

        <activity
                android:theme="@style/AppThemeWallpaper"
                android:name="com.fortysevendeg.ninecardslauncher.ui.launcher.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:theme="@style/AppTheme"
                android:label=""
                android:name="com.fortysevendeg.ninecardslauncher.ui.collections.CollectionsDetailsActivity" />

        <activity
                android:theme="@style/AppTheme"
                android:label=""
                android:name="com.fortysevendeg.ninecardslauncher.ui.wizard.WizardActivity" />

        <service
                android:name="com.fortysevendeg.ninecardslauncher.services.CreateCollectionService" />

        <provider
                android:authorities="com.fortysevendeg.ninecardslauncher2"
                android:name="com.fortysevendeg.ninecardslauncher.provider.NineCardsContentProvider"
                android:exported="false" />

        <receiver android:name="com.fortysevendeg.ninecardslauncher.receivers.NineCardsReceiver">
            <intent-filter android:priority="999">
                <action android:name="com.fortysevendeg.ninecardslauncher.OPEN_APP"/>
                <action android:name="com.fortysevendeg.ninecardslauncher.OPEN_RECOMMENDED_APP"/>
                <action android:name="com.fortysevendeg.ninecardslauncher.OPEN_SMS"/>
                <action android:name="com.fortysevendeg.ninecardslauncher.OPEN_PHONE"/>
                <action android:name="com.fortysevendeg.ninecardslauncher.OPEN_EMAIL"/>
            </intent-filter>
        </receiver>

    </application>

    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

</manifest>